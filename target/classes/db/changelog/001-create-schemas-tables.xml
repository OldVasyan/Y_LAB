<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">



    <changeSet id="2-create-sequence-product" author="you">
        <createSequence schemaName="catalog" sequenceName="product_id_seq" startValue="1"/>
    </changeSet>

    <changeSet id="3-create-product-table" author="you">
        <createTable tableName="product" schemaName="catalog">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="category" type="varchar(255)"/>
            <column name="brand" type="varchar(255)"/>
            <column name="price" type="numeric(12,2)"/>
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="4-default-id-from-seq" author="you">
        <addDefaultValue schemaName="catalog" tableName="product" columnName="id"
                         defaultValueSequenceNext="catalog.product_id_seq"/>
    </changeSet>

</databaseChangeLog>
